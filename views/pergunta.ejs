<%- include('./partials/header.ejs') %>

<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="container">
    <hr>
    <h1> <%= pergunta.titulo %></h1>
    <p>  <%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
      <h3>Responda</h3>
      <label for="corpo">Resposta</label>
      <textarea class="form-control" name="corpo" id="corpo" placeholder="Digite sua resposta"></textarea>
      <br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button class="btn btn-primary" type="submit">Responder</button>
    </form>
    <hr>
    <h2>Respostas</h2>
    <hr>
    <% respostas.forEach( resposta =>{ %>
      <div class="card">
        <div class="card-body">
          <p>
            <%= resposta.corpo %>
          </p>
        </div>
      </div> 
      <br>     
    <%})%>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>
</html>